{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8001
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../web"
                        },
                        "ws": {
                            "type": "websocket"
                        },
                        "publish": {
                            "type": "publisher",
                            "realm": "realm1",
                            "role": "anonymous",
                            "options": {
                                "debug": true
                            }
                        },
                        "publish-signed": {
                            "type": "publisher",
                            "realm": "realm1",
                            "role": "anonymous",
                            "options": {
                                "key": "foobar",
                                "secret": "secret",
                                "post_body_limit": 8192,
                                "timestamp_delta_limit": 10,
                                "require_tls": false
                            }
                        },
                        "call": {
                            "type": "caller",
                            "realm": "realm1",
                            "role": "anonymous"
                        },
                        "call-signature": {
                            "type": "caller",
                            "realm": "realm1",
                            "role": "anonymous",
                            "options": {
                                "key": "key",
                                "secret": "secret"
                            }
                        }
                    }
                }
            ]
        },
        {
            "type": "container",
            "options": {
                "pythonpath": ["session"]
            },
            "components": [
                {
                    "type": "class",
                    "classname": "test_session.TestSession",
                    "realm": "realm1",
                    "transport": {
                        "type": "websocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "localhost",
                            "port": 8001
                        },
                        "url": "ws://localhost:8001/ws"
                    }
                }
            ]
        }
    ]
}
